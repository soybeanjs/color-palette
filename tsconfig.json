{
	"compilerOptions": {
		"target": "ESNext",
		"jsx": "preserve",
		"lib": ["DOM", "ESNext"],
		"baseUrl": ".",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"types": ["node"],
		"strict": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"outDir": "./dist",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
