{
  "name": "@soybeanjs/colord",
  "type": "module",
  "version": "0.1.0",
  "packageManager": "pnpm@10.28.0",
  "description": "A tiny yet powerful tool for high-performance color manipulations and conversions",
  "author": {
    "name": "Soybean",
    "email": "soybeanjs@outlook.com",
    "url": "https://github.com/soybeanjs"
  },
  "license": "MIT",
  "homepage": "https://github.com/soybeanjs/colord",
  "repository": {
    "url": "https://github.com/soybeanjs/colord.git"
  },
  "bugs": {
    "url": "https://github.com/soybeanjs/colord/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./palette": {
      "types": "./dist/palette/index.d.ts",
      "import": "./dist/palette/index.js",
      "require": "./dist/palette/index.js"
    },
    "./plugins/*": {
      "types": "./dist/plugins/*.d.ts",
      "import": "./dist/plugins/*.js",
      "require": "./dist/plugins/*.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "build": "tsdown",
    "cleanup": "soy cleanup",
    "commit": "soy git-commit",
    "dev": "tsup --watch",
    "lint": "eslint . --fix",
    "prepare": "simple-git-hooks",
    "publish-pkg": "pnpm publish --access public",
    "release": "soy release",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "update-pkg": "soy ncu"
  },
  "devDependencies": {
    "@soybeanjs/cli": "1.4.4",
    "@soybeanjs/eslint-config": "1.7.5",
    "@types/node": "25.0.8",
    "eslint": "9.39.2",
    "lint-staged": "16.2.7",
    "simple-git-hooks": "2.13.1",
    "tsdown": "0.19.0",
    "tsx": "4.21.0",
    "typescript": "5.9.3"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm soy git-commit-verify",
    "pre-commit": "pnpm typecheck && pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
